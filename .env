# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development  # Change to 'production' in production environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mydatabase
SQLALCHEMY_TRACK_MODIFICATIONS=False

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600  # Token expiration time in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:3000  # Allowed origins for CORS

# Logging Configuration
LOG_LEVEL=DEBUG  # Change to INFO or ERROR in production
LOG_FILE=error.log

# AI Model Configuration
MODEL_NAME=bert  # Specify the model name (e.g., 'bert', 'gpt')
MODEL_PATH=/path/to/your/model  # Path to the pre-trained model

# Other Configuration
DEBUG=True  # Set to False in production
